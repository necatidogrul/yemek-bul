  "shortcuts": [
    {
      "name": "Hızlı Arama",
      "short_name": "Ara",  
      "description": "Malzemelerinizle hızlıca tarif bulun",
      "url": "/?shortcut=search",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Favorilerim",
      "short_name": "Favoriler",
      "description": "Favori tariflerinizi görüntüleyin", 
      "url": "/favorites?shortcut=favorites",
      "icons": [
        {
          "src": "/icons/shortcut-favorites.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Geçmiş",
      "short_name": "Geçmiş",
      "description": "Arama geçmişinizi inceleyin",
      "url": "/history?shortcut=history", 
      "icons": [
        {
          "src": "/icons/shortcut-history.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Tarif",
      "short_name": "AI",
      "description": "AI ile yeni tarif oluşturun",
      "url": "/?ai=true&shortcut=ai",
      "icons": [
        {
          "src": "/icons/shortcut-ai.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+yemekbulucu",
      "url": "/?recipe=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "recipe_image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/recipe-import",
      "name": "Tarif İçe Aktar",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt", ".recipe"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "offline_enabled": true,
  "features": [
    "ai-recipe-generation",
    "offline-search", 
    "smart-caching",
    "background-sync",
    "push-notifications"
  ]
}